<h1>List all the comments</h1>

<h1>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Content</th>
        <th>Tags</th>
      </tr>
    </thead>
    
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= comment.content %>
          </td>
          <td>
            <%= comment.tags %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</h1>