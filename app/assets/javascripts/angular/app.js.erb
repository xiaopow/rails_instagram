'use strict';

var app = angular.module('rails-instagram', ['ngRoute']);

app.config(['$routeProvider',function($routeProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: "StaticPagesCtrl"
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('users/signup.html') %>",
      controller: "SignUpCtrl"
    }).
    when('/signin', {
      templateUrl: "<%= asset_path('users/signin.html') %>",
      controller: "SignInCtrl"
    }).
    when('/logout', {
      templateUrl: "<%= asset_path('users/logout.html') %>",
      controller: "LogOutCtrl"
    });
  
}]);